FROM python:3.9-slim

WORKDIR /app

COPY servidor_tse.py /app
COPY requirements.txt /app

RUN apt-get update && apt-get install -y \
    unixodbc \
    unixodbc-dev \
    libodbc1 \
    odbcinst \
    msodbcsql17 && \
    pip install --no-cache-dir -r requirements.txt

EXPOSE 5002

CMD ["python", "servidor_tse.py"]
